<div class="text-center">
  <h1 class="text-4xl font-bold text-black my-8">Welcome To Inventory Page</h1>
</div>

<div class="flex flex-col items-center mt-2">
  <div class="w-full max-w-md">
    <div class="new-link bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded text-center mb-4">
      <%= link_to 'Create New Inventory', new_inventory_path %>
    </div>
  </div>
  <div class="inventory-list w-full max-w-xl">
    <% @inventories.each do |inv| %>
      <div class="inventory bg-white shadow-md p-4 rounded-lg my-4">
        <%= link_to inventory_path(inv), class: "inventory-link" do %>
          <div class="header">
            <h2 class="text-xl font-bold text-blue-500 mb-2"><%= inv.name %></h2>
          </div>
          <div class="description">
            <p class="text-gray-600"><%= inv.description %></p>
          </div>
        <% end %>
        <div class="remove-button text-center mt-4">
          <%= form_with model: inv, url: inventory_path(inv), method: :delete do |form| %>
            <%= form.submit "Remove", class: "bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>