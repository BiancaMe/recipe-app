<div class="new-inventory max-w-md mx-auto mt-8 bg-white p-4 rounded-lg shadow-md">
  <h2 class="text-2xl font-bold text-blue-500 mb-4">Add Inventory</h2>
  <div class="new-body">
    <%= form_with model: @inventory, url: inventories_path do |f| %>
      <div class="mb-4">
        <%= f.label :name, class: "block text-gray-600 text-sm font-semibold" %>
        <%= f.text_field :name, class: "w-full p-2 border border-gray-300 rounded focus:ring-2 focus:ring-blue-500" %>
      </div>
      
      <div class="mb-4">
        <%= f.label :description, class: "block text-gray-600 text-sm font-semibold" %>
        <%= f.text_area :description, rows: 4, class: "w-full p-2 border border-gray-300 rounded focus:ring-2 focus:ring-blue-500" %>
      </div>
      
      <div class="text-center">
        <%= f.submit "Create Inventory", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 font-semibold" %>
      </div>
    <% end %>
  </div>
</div>